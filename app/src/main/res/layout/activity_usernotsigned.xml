<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.elaine.participatorysensingproject_android.Layout.TitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
    </com.example.elaine.participatorysensingproject_android.Layout.TitleLayout>


    <Button
        android:layout_below="@id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/toLogin"
        android:text="登录"
        android:textColor="@color/icon_text_selected"
        android:background="@drawable/bg_button"/>

    <Button
        android:layout_below="@id/toLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/toRegister"
        android:text="注册"
        android:textColor="@color/icon_text_selected"
        android:background="@drawable/bg_button"/>


    <com.example.elaine.participatorysensingproject_android.Layout.MenuLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </com.example.elaine.participatorysensingproject_android.Layout.MenuLayout>

</android.support.percent.PercentRelativeLayout>