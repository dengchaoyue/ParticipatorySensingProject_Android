<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.elaine.participatorysensingproject_android.Layout.TitleLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"></com.example.elaine.participatorysensingproject_android.Layout.TitleLayout>

    <TextView
        android:id="@+id/blank_first"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/title" />

    <TextView
        android:id="@+id/line_first"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/blank_first"
        android:background="@color/icon_text_normal" />

    <LinearLayout
        android:id="@+id/userinfo_ll_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_first"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userinfo_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/login_pic" />

            <TextView
                android:id="@+id/user_center_login_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="头像"
                android:textColor="@color/icon_text_normal"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/uc_front_icon"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/icon_text_normal" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/line_second"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/userinfo_ll_first"
        android:background="@color/icon_text_normal" />

    <LinearLayout
        android:id="@+id/userinfo_ll_second"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line_second"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="用户名"
            android:textColor="@color/icon_text_normal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="22dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text=""/>

        <TextView
            android:id="@+id/userinfo_username"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="用户名"
            android:textColor="@color/icon_text_normal"
            android:textSize="22dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>

    <TextView
        android:id="@+id/line_third"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/icon_text_normal"
        android:layout_below="@id/userinfo_ll_second"/>


    <com.example.elaine.participatorysensingproject_android.Layout.MenuLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></com.example.elaine.participatorysensingproject_android.Layout.MenuLayout>

</RelativeLayout>