<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.elaine.participatorysensingproject_android.Layout.TitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
    </com.example.elaine.participatorysensingproject_android.Layout.TitleLayout>
    
    <TextView
        android:layout_below="@id/titleLayout"
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:textColor="@color/black_ivory"
        app:layout_heightPercent="20%"/>

    <Button
        android:layout_below="@id/userName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/userExit"
        android:text="退出登录"
        android:textColor="@color/icon_text_selected"
        android:background="@drawable/bg_button"/>


    <com.example.elaine.participatorysensingproject_android.Layout.MenuLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </com.example.elaine.participatorysensingproject_android.Layout.MenuLayout>

</android.support.percent.PercentRelativeLayout>