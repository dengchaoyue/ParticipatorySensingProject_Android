<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elaine.participatorysensingproject_android.AutoCamera.AutoCameraActivity"
    android:background="#f0ffff">

    <com.example.elaine.participatorysensingproject_android.Layout.TitleLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        ></com.example.elaine.participatorysensingproject_android.Layout.TitleLayout>

    <TextView
        android:id="@+id/FD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="50dp"
        android:text="自动拍摄照片数量（张）: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/icon_text_normal"/>

    <com.example.elaine.participatorysensingproject_android.AutoCamera.MyHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbars="none"
        android:id="@+id/FDScrollView"
        android:layout_below="@id/FD"
        android:layout_marginTop="30dp"
        android:background="#f0ffff">

        <LinearLayout
            android:id="@+id/linearLayoutAbove"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#ffffff">
        </LinearLayout>

    </com.example.elaine.participatorysensingproject_android.AutoCamera.MyHorizontalScrollView>

    <TextView
        android:id="@+id/BSS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/FDScrollView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="50dp"
        android:text="自动拍摄时间间隔（小时）: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/icon_text_normal"/>

    <com.example.elaine.participatorysensingproject_android.AutoCamera.MyHorizontalScrollViewBelow
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbars="none"
        android:id="@+id/BSSScrollView"
        android:background="#f0ffff"
        android:layout_below="@id/BSS"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:id="@+id/linearLayoutBelow"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#ffffff">
        </LinearLayout>
    </com.example.elaine.participatorysensingproject_android.AutoCamera.MyHorizontalScrollViewBelow>

    <TextView
        android:id="@+id/tips"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#FF0000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/BSSScrollView"
        android:layout_marginTop="18dp"/>

    <com.example.elaine.participatorysensingproject_android.Layout.MenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true">
    </com.example.elaine.participatorysensingproject_android.Layout.MenuLayout>

</RelativeLayout>
